{
    "compileOnSave": true,
    "compilerOptions": {
        "paths": { "*": ["types/*"] },
        "module": "commonjs",
        "strict": true,
        "baseUrl": "./src",
        "outDir": "build",
        "sourceMap": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "target": "es6",
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "importHelpers": true,
        "types": ["node"],
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
